<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Dashboard de Superhéroes</title>
  <link rel="stylesheet" href="/style.css?v=2">
</head>

<body>
  <h1>Lista de Superhéroes</h1>
  <table border="1">
    <thead>
        <tr>
            <th>Nombre del Superhéroe</th>
            <th>Nombre Real</th>
            <th>Edad</th>
            <th>Planeta de Origen</th>
            <th>Debilidad</th>
            <th>Poderes</th>
            <th>Aliado</th>
            <th>Enemigo</th>
            <th>Creadores</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% if (superheroes && superheroes.length > 0) { %>
            <% superheroes.forEach(superheroe => { %>
                <tr>
                    <td><%= superheroe.nombreSuperheroe %></td>
                    <td><%= superheroe.nombreReal %></td>
                    <td><%= superheroe.edad %></td>
                    <td><%= superheroe.planetaOrigen %></td>
                    <td><%= superheroe.debilidad %></td>
                    <td><%= Array.isArray(superheroe.poder) ? superheroe.poder.join(', ') : superheroe.poder %></td>
                    <td><%= superheroe.aliado %></td>
                    <td><%= superheroe.enemigo %></td>
                    <td><%= Array.isArray(superheroe.creador) ? superheroe.creador.join(', ') : superheroe.creador %></td>
                    <td>
                        <a href="/api/heroes/<%= superheroe._id %>/edit">Editar</a>
                        <form action="/api/heroes/<%= superheroe._id %>/delete?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="10">No hay superhéroes disponibles.</td>
            </tr>
        <% } %>
    </tbody>
  </table>

  <!-- Formulario de creación -->
 
    <a href="/api/heroes/new" class="button">Crear Nuevo</a>
   


  <!-- Formulario para Eliminar por Atributo -->
 
    <a href="/api/heroes/deleteAttribute" class="button">Eliminar</a>
  
</body>
</html>
